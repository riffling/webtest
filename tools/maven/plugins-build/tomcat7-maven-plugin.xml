<build>
    <plugins>
        <plugin>
            <groupId>org.apache.tomcat.maven</groupId>
            <artifactId>tomcat7-maven-plugin</artifactId>
            <version>2.1</version>
            <executions>
                <execution>
                    <id>tomcat-run</id>
                    <goals>
                        <goal>exec-war-only</goal>
                    </goals>
                    <phase>package</phase>
                    <configuration>
                        <url>http://localhost:8080/manager</url>
                        <path>/WebGoat</path>
                        <attachArtifactClassifier>exec</attachArtifactClassifier>
                    </configuration>
                </execution>
            </executions>
        </plugin>
    </plugins>
</build>